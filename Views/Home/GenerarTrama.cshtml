@model TAS360.Models.ViewModel.TramaConfOrdenCargaDescViewModel
@{
    ViewBag.Title = "Generar Trama";
    List<SelectListItem> ListTrancc = (List<SelectListItem>)ViewBag.ListTipoTrancc;
}
<br />
<section class="page-section about-heading">
    <div class="container">
        @*<img class="img-fluid rounded about-heading-img mb-3 mb-lg-0" src="assets/img/about.jpg" alt="..." />*@
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <h2 class="section-heading mb-4">
                            @*<span class="section-heading-upper">Strong Coffee, Strong Roots</span>*@
                            <span class="section-heading-lower">Generar Trama</span>
                        </h2>
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("Add", "User", FormMethod.Post, new { role = "form", @class = "" }))
                                {
                                    @Html.AntiForgeryToken()



                                    @Html.LabelFor(f => f.Tipo_Transaccion)
                                    @Html.DropDownListFor(model => model.Tipo_Transaccion, ListTrancc, new { @class = "form-control" })

                                    @Html.LabelFor(f => f.Numero_Operacion)
                                    @Html.TextBoxFor(f => f.Numero_Operacion, new { @class = "form-control" })
                                    @Html.ValidationMessage("name", new { @class = "text-danger" })
                                    <br />


                                    <div style="text-align:right">
                                        <input type="submit" class="btn btn-success" value="Generar Trama" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>