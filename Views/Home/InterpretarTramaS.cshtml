            </tr>
            <tr>
                <td>Temperatura Promedio</td>
                <td>@Model.Trama2.TemperaturaPromedio</td>
            </tr>
            <tr>
                <td>Fecha</td>
                <td>@Model.Trama2.Fecha</td>
            </tr>
            <tr>
                <td>Hora</td>
                <td>@Model.Trama2.Hora</td>
            </tr>
