</div>

<script type="text/javascript">

    let trama1 = '@Model.Trama.TipoTransaccion'
    let trama2 = '@Model.Trama2.TipoTransaccion'
    let divone = document.getElementById("divone")
    let divtwo = document.getElementById("divtwo")

    if (trama1 == "Confirmacion de carga / descarga" && trama2 == "")
    {
        divtwo.setAttribute("style", "display:none")
        divone.setAttribute("style", "display:box")
    }

    if (trama2 === "Volumen de Tanques" && trama1 == "")
    {
        divone.setAttribute("style", "display:none")
        divtwo.setAttribute("style", "display:box")
    }

</script>
