@model TAS360.Models.ViewModel.Rol_OperacionViewModel
@using TAS360.Models.ViewModel;
@{
    ViewBag.Title = "Agregar Privilegios";
    string exception = ViewBag.ExceptionMessage;
    string Info = ViewBag.InfoMessage;
    List<SelectListItem> Operaciones = (List<SelectListItem>)ViewBag.Operaciones;
    List<SelectListItem> Roles = (List<SelectListItem>)ViewBag.Roles;
}
<div class="jumbotron">
    <h1>Agregar Privilegios</h1>
    <p class="lead">Una privilegio del sistema es un <strong>permisivo</strong> para realizar alguna operacion de cualquier modulo</p>
  
    @if (exception != null)
    {
        <div class="alert alert-danger" role="alert">
            @exception
        </div>
    }
    @if (Info != null)
    {
        <div class="alert alert-info" role="alert">
            @Info
        </div>
    }
</div>
<section class="page-section about-heading">
    <div class="container">
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <div class="row">
                            <div class="col-md-8">
                                @using (Html.BeginForm("AddRol_Operacion", "Roles_and_Privilege", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div name="row2" class="row" style="margin:0 0 10px 0">

                                        <div class="col-md-12">
                                            <div class="col-lg-6" style="margin: 0px 0px 0px 0px;">
                                                @Html.LabelFor(f => f.id_rol)
                                                @Html.DropDownListFor(model => model.id_rol, Roles, new { @class = "form-control" })
                                            </div>
                                            <div class="col-md-6">
                                                @Html.LabelFor(f => f.id_operacion)
                                                @Html.DropDownListFor(model => model.id_operacion, Operaciones, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin: 0px 0px 0px 0px; text-align:right">
                                        <button type="submit" class="btn btn-success" data-toggle="tooltip" title="Agregar Operacion">
                                            <b>Crear</b>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tags" viewBox="0 0 16 16">
                                                <path d="M3 2v4.586l7 7L14.586 9l-7-7zM2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 2 6.586z" />
                                                <path d="M5.5 5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1m0 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3M1 7.086a1 1 0 0 0 .293.707L8.75 15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1z" />
                                            </svg>
                                        </button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
