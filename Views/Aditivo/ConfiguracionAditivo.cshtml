@model TAS360.Models.ViewModel.ConfigTanqAditivoViewModel
@{
    ViewBag.Title = "Configuración";

}
<div class="jumbotron">
    <h1>Configuración</h1>
    <p class="lead">Hoja para configurar el tanque de aditivo en la TAD </p>
</div>
<section class="page-section about-heading">
    <div class="container">
        @*<img class="img-fluid rounded about-heading-img mb-3 mb-lg-0" src="assets/img/about.jpg" alt="..." />*@
        <div class="about-heading-content">
            <div class="row">
                <div class="col-xl-9 col-lg-10 mx-auto">
                    <div class="bg-faded rounded p-5">
                        <div class="row">
                            <div class="col-md-12">
                                @using (Html.BeginForm("xxxx", "Aditivo", FormMethod.Post, new { role = "form", @class = "" }))
                                {
                                    @Html.AntiForgeryToken()

                                    @Html.LabelFor(f => f.Name)
                                    @Html.TextBoxFor(f => f.Name, new { @class = "form-control" })
                                    @Html.ValidationMessage("name", new { @class = "text-danger" })
                                    <br />
                                    @Html.LabelFor(f => f.Tag)
                                    @Html.TextBoxFor(f => f.Tag, new { @class = "form-control" })
                                    @Html.ValidationMessage("Tag", new { @class = "text-danger" })
                                    <br />
                                    @Html.LabelFor(f => f.Altura_Tanq)
                                    @Html.TextBoxFor(f => f.Altura_Tanq, new { @class = "form-control" })
                                    @Html.ValidationMessage("Altura_Tanq", new { @class = "text-danger" })
                                    <br />
                                    @Html.LabelFor(f => f.Niv_Bajo_Inv_Tanq)
                                    @Html.TextBoxFor(f => f.Niv_Bajo_Inv_Tanq, new { @class = "form-control" })
                                    @Html.ValidationMessage("Niv_Bajo_Inv_Tanq", new { @class = "text-danger" })
                                    <br />                           
                                    <div style="text-align:right">
                                        <input class="btn btn-success" value="Guardar" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

